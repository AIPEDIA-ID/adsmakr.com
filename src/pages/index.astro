---
import Layout from "../layouts/Layout.astro";
import copy from "../data/copy.json";
---

<Layout title={copy.pageTitle}>
	<main class="px-6 md:px-10 py-16 flex flex-col gap-16">
		<!-- [HERO: PAS - PROBLEM & PROMISE] -->
		<section class="text-center pt-8">
			<div
				class="inline-block px-4 py-1.5 bg-red-50 rounded-lg mb-6 border border-red-100 animate-pulse"
			>
				<span
					class="text-[11px] font-black text-red-600 tracking-[0.2em]"
					>{copy.hero.warningTag}</span
				>
			</div>
			<h1
				class="text-hero mb-6 text-balance text-gray-900"
				set:html={copy.hero.title}
			/>
			<p
				class="text-body-pro mb-8 text-balance px-2 max-w-lg mx-auto"
				set:html={copy.hero.description}
			/>
			<div class="max-w-xs mx-auto">
				<button class="btn-3d w-full group">
					<span class="text-lg">{copy.hero.cta}</span>
					<i
						data-lucide="arrow-right"
						class="w-5 h-5 group-hover:translate-x-1 transition-transform"
					></i>
				</button>
			</div>
			<div class="mt-8 flex flex-col items-center gap-2">
				<div class="flex -space-x-2">
					<img
						class="w-8 h-8 rounded-full border-2 border-white"
						src="https://i.pravatar.cc/100?img=1"
						alt="User"
					/>
					<img
						class="w-8 h-8 rounded-full border-2 border-white"
						src="https://i.pravatar.cc/100?img=2"
						alt="User"
					/>
					<img
						class="w-8 h-8 rounded-full border-2 border-white"
						src="https://i.pravatar.cc/100?img=3"
						alt="User"
					/>
					<div
						class="w-8 h-8 rounded-full border-2 border-white bg-gray-100 flex items-center justify-center text-[10px] font-bold text-gray-500"
					>
						+4k
					</div>
				</div>
				<p class="text-[10px] font-bold text-gray-500 tracking-widest">
					{copy.hero.socialProof}
				</p>
			</div>
		</section>

		<!-- [MAGIC GRID: PROOF] -->
		<section>
			<div class="text-center mb-8">
				<h2 class="section-title mb-3">
					{copy.showcase.title}
				</h2>
				<p class="text-base text-gray-600 font-medium max-w-lg mx-auto">
					{copy.showcase.subtitle}
				</p>
			</div>

			<div class="space-y-10">
				{
					copy.showcase.samples.map((sample) => (
						<div class="space-y-4">
							<div class="flex justify-between items-center border-b-2 border-gray-50 pb-2">
								<h4 class="font-black text-[10px] tracking-widest text-gray-400">
									Studi Kasus: {sample.niche}
								</h4>
								<span class="text-[9px] font-black text-primary-600 tracking-tighter bg-primary-100 px-2 py-1 rounded border border-primary-200">
									Result: {sample.tag}
								</span>
							</div>
							<div class="grid grid-cols-5 gap-3">
								<div class="col-span-2 photo-box aspect-[3/4] border-dashed border-2 border-gray-300 relative bg-gray-50">
									<img
										src={sample.inputImage}
										class="w-full h-full object-cover grayscale opacity-50 mix-blend-multiply"
									/>
									<div class="absolute inset-0 flex items-center justify-center">
										<span class="bg-gray-900/80 backdrop-blur-sm text-white px-3 py-1.5 text-[10px] font-black rounded shadow-lg border border-white/20">
											Foto Mentah
										</span>
									</div>
								</div>
								<div class="col-span-3 grid grid-cols-2 gap-2">
									{sample.results.map((result) => (
										<div class="photo-box aspect-square relative bg-white border-2 border-primary-500/20 shadow-sm transition-transform hover:scale-105 duration-300 z-0 hover:z-10">
											<img
												src={result.image}
												class={`w-full h-full object-cover ${result.filter}`}
											/>
										</div>
									))}
								</div>
							</div>
						</div>
					))
				}
			</div>
			<div class="text-center mt-8">
				<p
					class="text-xs font-bold text-gray-400 uppercase tracking-widest border-2 border-dashed border-gray-200 inline-block px-4 py-2 rounded-full"
				>
					{copy.showcase.footer}
				</p>
			</div>
		</section>

		<!-- [GALLERY MODES] -->
		<section>
			<div class="text-center mb-8">
				<h2 class="section-title mb-3">{copy.gallery.title}</h2>
				<p class="text-base text-gray-600 font-medium max-w-lg mx-auto">
					{copy.gallery.subtitle}
				</p>
			</div>

			<div class="grid grid-cols-2 gap-4">
				{
					copy.gallery.modes.map((mode) => (
						<div class="photo-box aspect-square relative group cursor-pointer hover:border-primary-500 transition-all">
							<img
								src={mode.image}
								class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
							/>
							<div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-60" />
							<span class="absolute bottom-4 left-4 text-white font-black text-[12px] tracking-wider">
								{mode.title}
							</span>
						</div>
					))
				}
			</div>
			<div class="text-center mt-8">
				<p
					class="text-xs font-bold text-gray-400 uppercase tracking-widest border-2 border-dashed border-gray-200 inline-block px-4 py-2 rounded-full"
				>
					{copy.gallery.footer}
				</p>
			</div>
		</section>

		<!-- [HOW TO] -->
		<section>
			<h2 class="section-title text-center mb-8">
				{copy.howTo.title}
			</h2>
			<div class="grid gap-4 md:grid-cols-3">
				{
					copy.howTo.steps.map((item) => (
						<div class="bg-white p-5 rounded-xl border border-gray-100 shadow-sm">
							<h4 class="text-2xl font-black text-primary-500 mb-2">
								{item.step}
							</h4>
							<h3 class="font-black text-gray-900 text-[15px] tracking-tight leading-snug mb-2">
								{item.title}
							</h3>
							<p class="text-sm font-medium text-gray-600 leading-relaxed">
								{item.desc}
							</p>
						</div>
					))
				}
			</div>
		</section>

		<!-- [DASHBOARD] -->
		<section
			class="bg-gray-50 -mx-6 md:-mx-10 px-6 md:px-10 py-16 border-y border-gray-100"
		>
			<div class="text-center mb-8">
				<h2 class="section-title mb-3">{copy.dashboard.title}</h2>
				<p class="text-base text-gray-600 font-medium max-w-lg mx-auto">
					{copy.dashboard.subtitle}
				</p>
			</div>
			<div
				class="photo-box aspect-video shadow-2xl relative border-4 border-white ring-1 ring-gray-900/5 rounded-xl overflow-hidden"
			>
				<img
					src={copy.dashboard.image}
					class="w-full h-full object-cover"
				/>
				<div
					class="absolute inset-0 bg-black/50 flex flex-col items-center justify-center p-8 text-center backdrop-blur-[2px]"
				>
					<div
						class="w-14 h-14 bg-primary-500 rounded-2xl flex items-center justify-center mb-4 shadow-[0_0_40px_-5px_var(--primary-deep)] border-2 border-white/20"
					>
						<i
							data-lucide="play"
							class="w-6 h-6 text-white fill-current ml-1"></i>
					</div>
					<p
						class="text-white text-[10px] font-black tracking-[0.3em] drop-shadow-md"
					>
						{copy.dashboard.demoText}
					</p>
				</div>
			</div>
		</section>

		<!-- [VALUES: AGITATE & SOLUTION] -->
		<section>
			<div class="text-center mb-10">
				<h2 class="section-title mb-3">{copy.benefits.title}</h2>
				<p
					class="text-base text-gray-600 font-medium pb-2 max-w-lg mx-auto"
				>
					{copy.benefits.subtitle}
				</p>
			</div>

			<div class="grid gap-4">
				{
					copy.benefits.items.map((benefit) => (
						<div class="flex gap-4 p-5 bg-white border border-gray-100 rounded-2xl shadow-sm hover:shadow-md hover:border-primary-500 transition-all duration-300 items-start">
							<div class="w-12 h-12 bg-primary-50 rounded-xl flex items-center justify-center shrink-0 mt-0.5 border border-primary-100">
								<i
									data-lucide={benefit.icon}
									class="w-6 h-6 text-primary-600"
								/>
							</div>
							<div>
								<h4 class="font-black text-gray-900 text-[15px] tracking-tight leading-snug mb-1">
									{benefit.title}
								</h4>
								<p
									class="text-sm font-medium text-gray-600 leading-relaxed"
									set:html={benefit.description}
								/>
							</div>
						</div>
					))
				}
			</div>
		</section>

		<!-- [COMPARISON] -->
		<section>
			<h2 class="section-title text-center mb-8">
				{copy.comparison.title}
			</h2>
			<div
				class="border-4 border-gray-900 rounded-2xl overflow-hidden shadow-[8px_8px_0px_0px_rgba(17,24,39,1)]"
			>
				<table class="w-full text-left">
					<thead
						class="bg-gray-900 text-white text-[10px] font-black tracking-widest text-center"
					>
						<tr>
							<th class="p-4 border-r border-white/10"
								>{copy.comparison.table.headers[0]}</th
							>
							<th
								class="p-4 border-r border-white/10 text-gray-400"
								>{copy.comparison.table.headers[1]}</th
							>
							<th class="p-4 bg-primary-600"
								>{copy.comparison.table.headers[2]}</th
							>
						</tr>
					</thead>
					<tbody class="text-[12px] font-bold text-center bg-white">
						{
							copy.comparison.table.rows.map((row) => (
								<tr class="border-b border-gray-100 last:border-0">
									<td class="p-4 text-left font-black text-[10px] text-gray-500">
										{row.factor}
									</td>
									<td class="p-4 text-red-500 line-through decoration-2">
										{row.agency}
									</td>
									<td class="p-4 text-primary-600 bg-primary-50/50">
										{row.adsmakr}
									</td>
								</tr>
							))
						}
					</tbody>
				</table>
			</div>
		</section>

		<!-- [BONUSES] -->
		<section
			class="bg-white border-2 border-dashed border-gray-300 rounded-3xl p-8 md:p-12 relative overflow-hidden"
		>
			<div class="text-center mb-8">
				<span
					class="bg-red-100 text-red-600 px-3 py-1 rounded text-[10px] font-black tracking-widest mb-4 inline-block border border-red-200"
				>
					{copy.bonuses.tag}
				</span>
				<h2 class="text-2xl font-black mb-2 text-gray-900">
					{copy.bonuses.title}
				</h2>
				<p class="text-gray-600 text-sm max-w-lg mx-auto">
					{copy.bonuses.subtitlePre}
					<strong class="text-gray-900"
						>{copy.bonuses.subtitleValue}</strong
					>{copy.bonuses.subtitlePost}
				</p>
			</div>

			<div class="grid gap-4 md:grid-cols-2">
				{
					copy.bonuses.items.map((bonus) => (
						<div class="bg-gray-50 border border-gray-100 p-5 rounded-xl">
							<div class="flex justify-between items-start mb-2">
								<h3 class="font-black text-primary-600 text-sm tracking-wide">
									{bonus.title}
								</h3>
								<span class="bg-white border border-gray-200 text-[9px] px-2 py-0.5 rounded text-gray-600 font-bold">
									{bonus.value}
								</span>
							</div>
							<p class="text-xs font-bold text-gray-600 leading-relaxed">
								{bonus.desc}
							</p>
						</div>
					))
				}
			</div>
		</section>

		<!-- [PRICING - SCARCITY] -->
		<section class="pt-8 mb-8">
			<div class="max-w-[340px] mx-auto relative group">
				<div
					class="absolute -inset-1 bg-gradient-to-r from-red-500 to-orange-500 rounded-[24px] blur opacity-25 group-hover:opacity-50 transition duration-1000 group-hover:duration-200"
				>
				</div>
				<div
					class="pricing-card-3d-final text-center relative bg-white"
				>
					<div
						class="absolute -top-3 left-1/2 -translate-x-1/2 whitespace-nowrap"
					>
						<span
							class="bg-red-600 text-white text-[10px] font-black px-4 py-1.5 rounded-full tracking-widest border-2 border-white shadow-xl animate-bounce"
						>
							{copy.pricing.tag}
						</span>
					</div>

					<h3
						class="text-[10px] font-black tracking-[0.3em] text-gray-400 mb-2 mt-2"
					>
						{copy.pricing.subtitle}
					</h3>

					<div class="mb-6 mt-4">
						<span
							class="text-gray-400 line-through text-lg font-bold tracking-widest opacity-70 block mb-[-8px]"
						>
							{copy.pricing.originalPrice}
						</span>
						<div
							class="flex items-start justify-center gap-1 text-gray-900"
						>
							<span class="text-2xl font-black mt-3">Rp</span>
							<span
								class="text-[80px] font-black tracking-tighter leading-none"
							>
								{copy.pricing.priceMain}
							</span>
							<div class="flex flex-col items-start mt-3">
								<span class="text-3xl font-black leading-none"
									>{copy.pricing.priceUnit}</span
								>
								<span
									class="text-[10px] font-bold text-gray-400 tracking-wider"
									>{copy.pricing.priceDetail}</span
								>
							</div>
						</div>
					</div>

					<div
						class="space-y-3 mb-8 max-w-xs mx-auto text-left bg-gray-50 p-5 rounded-xl border border-gray-100"
					>
						{
							copy.pricing.features.map((feature) => (
								<div class="flex items-start gap-3">
									<div class="bg-primary-100 rounded-full p-0.5 mt-0.5 shrink-0">
										<i
											data-lucide="check"
											class="w-3 h-3 text-primary-600"
										/>
									</div>
									<span class="text-[12px] font-bold text-gray-700 leading-snug">
										{feature}
									</span>
								</div>
							))
						}
					</div>

					<div class="w-full space-y-3">
						<button class="btn-3d w-full group">
							<span class="text-lg">{copy.pricing.cta}</span>
							<i
								data-lucide="arrow-right"
								class="w-5 h-5 group-hover:translate-x-1 transition-transform"
							></i>
						</button>
						<p class="text-[10px] text-gray-400 font-medium">
							{copy.pricing.note}
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- [FAQ] -->
		<section class="pb-12 border-t border-gray-100 pt-12">
			<h2 class="section-title text-center mb-8">{copy.faq.title}</h2>
			<div class="space-y-3">
				{
					copy.faq.items.map((faq) => (
						<details class="group bg-white rounded-xl border border-gray-200 overflow-hidden hover:border-primary-500 transition-colors">
							<summary class="flex justify-between items-center p-5 cursor-pointer list-none bg-gray-50/50">
								<span class="font-black text-sm leading-tight text-gray-800 pr-4">
									{faq.question}
								</span>
								<i
									data-lucide="chevron-down"
									class="w-5 h-5 text-gray-400 transition-transform duration-300 group-open:rotate-180"
								/>
							</summary>
							<div class="px-5 pb-5 text-[14px] font-medium text-gray-600 leading-relaxed border-t border-gray-100 pt-4 bg-white">
								{faq.answer}
							</div>
						</details>
					))
				}
			</div>
		</section>
	</main>
</Layout>
