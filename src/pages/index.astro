---
import Layout from "../layouts/Layout.astro";
import copy from "../data/copy.json";
import screenShot from "../data/screen_shot.json";
---

<Layout title={copy.pageTitle}>
	<main class="px-6 md:px-10 py-14 pb-24 flex flex-col gap-14">
		<!-- [HERO: PAS - PROBLEM & PROMISE] -->
		<section class="text-center pt-8 hero-texture">
			<div
				class="inline-block px-4 py-1.5 rounded-full bg-yellow-50 border border-yellow-200 text-yellow-800 text-xs font-bold tracking-wide mb-6 uppercase shadow-sm"
				set:html={copy.hero.warningTag}
			/>
			<h1
				class="text-4xl md:text-6xl font-black text-gray-900 leading-[1.1] mb-6 tracking-tight drop-shadow-sm"
				set:html={copy.hero.title}
			/>
			<p
				class="text-xl text-gray-800 font-medium mb-8 max-w-2xl mx-auto leading-relaxed"
				set:html={copy.hero.description}
			/>
			<div class="max-w-xs mx-auto">
				<button
					onclick="document.getElementById('pricing').scrollIntoView({behavior: 'smooth'})"
					class="btn-3d w-full group btn-shine"
				>
					<span class="text-lg">{copy.hero.cta}</span>
					<i
						data-lucide="arrow-right"
						class="w-5 h-5 group-hover:translate-x-1 transition-transform"
					></i>
				</button>
			</div>
			<div class="mt-8 flex flex-col items-center gap-1">
				<div class="flex -space-x-2">
					{
						screenShot.hero.socialProofImages.map((src) => (
							<img
								class="w-8 h-8 rounded-full border-2 border-white"
								src={src}
								alt="User"
							/>
						))
					}
					<div
						class="w-8 h-8 rounded-full border-2 border-white bg-gray-100 flex items-center justify-center text-[10px] font-bold text-gray-500"
					>
						+100
					</div>
				</div>
				<p
					class="text-[12px] text-gray-500 font-medium"
					set:html={copy.hero.socialProof}
				/>
			</div>
		</section>

		<!-- [MAGIC GRID: PROOF] -->
		<section>
			<div class="text-center mb-8">
				<h2 class="section-title mb-3" set:html={copy.showcase.title} />
				<p class="text-subtitle" set:html={copy.showcase.subtitle} />
			</div>

			<div class="space-y-10">
				{
					screenShot.showcase.samples.map((sample) => (
						<div class="space-y-4">
							<div class="flex justify-between items-center border-b-2 border-gray-50 pb-2">
								<h4 class="font-black text-[10px] tracking-widest text-gray-400">
									Studi Kasus: {sample.niche}
								</h4>
								<span class="text-[9px] font-black text-primary-600 tracking-tighter bg-primary-100 px-2 py-1 rounded border border-primary-200">
									Result: {sample.tag}
								</span>
							</div>
							<div class="grid grid-cols-5 gap-3">
								<div class="col-span-2 photo-box aspect-[3/4] border-dashed border-2 border-gray-300 relative bg-gray-50">
									<img
										src={sample.inputImage}
										class="w-full h-full object-cover opacity-95"
									/>
									<div class="absolute inset-0 flex items-center justify-center">
										<span class="bg-gray-900/80 backdrop-blur-sm text-white px-3 py-1.5 text-[10px] font-black rounded shadow-lg border border-white/20">
											Foto Mentah
										</span>
									</div>
								</div>
								<div class="col-span-3 grid grid-cols-2 gap-1">
									{sample.results.map((result) => (
										<div
											class="photo-box aspect-square relative bg-white border-2 border-primary-500/20 shadow-sm transition-transform hover:scale-105 duration-300 z-0 hover:z-10 opacity-0 scroll-zoom-item"
											style={{
												animationDelay: `${Math.random() * 0.6}s`,
											}}
										>
											<img
												src={result.image}
												class={`w-full h-full object-cover ${result.filter}`}
											/>
											<div class="absolute bottom-2 left-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
												<span class="bg-yellow-400 text-black px-1.5 py-0.5 text-[8px] font-black rounded shadow-sm border border-black/10">
													AI
												</span>
											</div>
										</div>
									))}
								</div>
							</div>
						</div>
					))
				}
			</div>
			<div class="text-center mt-8">
				<p
					class="text-xs font-bold text-primary-600 uppercase tracking-widest border-2 border-dashed border-primary-200 bg-primary-50 inline-block px-4 py-2 rounded-full animate-attention"
				>
					{copy.showcase.footer}
				</p>
			</div>
		</section>

		<!-- [GALLERY MODES] -->
		<section>
			<div class="text-center mb-8">
				<h2 class="section-title mb-3" set:html={copy.gallery.title} />
				<p class="text-subtitle" set:html={copy.gallery.subtitle} />
			</div>

			<div class="grid grid-cols-2 gap-2">
				{
					screenShot.gallery.modes.map((mode) => (
						<div
							class="photo-box aspect-square relative group cursor-pointer hover:border-primary-500 transition-all opacity-0 scroll-zoom-item"
							style={{
								animationDelay: `${Math.random() * 0.6}s`,
							}}
						>
							<img
								src={mode.image}
								class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
							/>
							<div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-60" />
							<span class="absolute bottom-4 left-4 text-white font-black text-[12px] tracking-wider">
								{mode.title}
							</span>
						</div>
					))
				}
			</div>
			<div class="text-center mt-8">
				<p
					class="text-xs font-bold text-primary-600 uppercase tracking-widest border-2 border-dashed border-primary-200 bg-primary-50 inline-block px-4 py-2 rounded-full animate-attention"
				>
					{copy.gallery.footer}
				</p>
			</div>
		</section>

		<!-- [HOW TO] -->
		<section>
			<h2 class="section-title text-center mb-8">
				{copy.howTo.title}
			</h2>
			<div class="grid gap-4 md:grid-cols-3">
				{
					copy.howTo.steps.map((item) => (
						<div class="bg-white p-5 rounded-xl border border-gray-100 shadow-sm">
							<h4 class="text-2xl font-black text-primary-500 mb-2">
								{item.step}
							</h4>
							<h3
								class="font-black text-gray-900 text-[15px] tracking-tight leading-snug mb-2"
								set:html={item.title}
							/>
							<p class="text-body-sm" set:html={item.desc} />
						</div>
					))
				}
			</div>
		</section>

		<!-- [DASHBOARD] -->
		<section
			class="bg-gray-50 -mx-6 md:-mx-10 px-6 md:px-10 py-16 border-y border-gray-100"
		>
			<div class="text-center mb-8">
				<h2
					class="section-title mb-3"
					set:html={copy.dashboard.title}
				/>
				<p class="text-subtitle" set:html={copy.dashboard.subtitle} />
			</div>
			<div
				class="photo-box aspect-video shadow-2xl relative border-4 border-white ring-1 ring-gray-900/5 rounded-xl overflow-hidden scroll-zoom-item opacity-0"
			>
				<img
					src={screenShot.dashboard.image}
					class="w-full h-full object-cover"
				/>
				<div
					class="absolute inset-0 bg-black/50 flex flex-col items-center justify-center p-8 text-center backdrop-blur-[2px]"
				>
					<div
						class="w-14 h-14 bg-primary-500 rounded-2xl flex items-center justify-center mb-4 shadow-[0_0_40px_-5px_var(--primary-deep)] border-2 border-white/20"
					>
						<i
							data-lucide="play"
							class="w-6 h-6 text-white fill-current ml-1"></i>
					</div>
					<p
						class="text-white text-[10px] font-black tracking-[0.3em] drop-shadow-md"
					>
						{copy.dashboard.demoText}
					</p>
				</div>
			</div>
		</section>

		<!-- [SCRIPT & STYLES FOR SCROLL ANIMATION] -->
		<script>
			const observerOptions = {
				root: null,
				rootMargin: "0px",
				threshold: 0.2, // Trigger when 20% visible
			};

			const observer = new IntersectionObserver((entries) => {
				entries.forEach((entry) => {
					if (entry.isIntersecting) {
						entry.target.classList.add("animate-zoom-in");
						observer.unobserve(entry.target); // Run once
					}
				});
			}, observerOptions);

			document.querySelectorAll(".scroll-zoom-item").forEach((el) => {
				observer.observe(el);
			});
		</script>

		<!-- [VALUES: AGITATE & SOLUTION] -->
		<section>
			<div class="text-center mb-10">
				<h2 class="section-title mb-3">{copy.benefits.title}</h2>
				<p
					class="text-subtitle pb-2"
					set:html={copy.benefits.subtitle}
				/>
			</div>

			<div class="grid gap-4">
				{
					copy.benefits.items.map((benefit) => (
						<div class="flex gap-4 p-5 bg-white border border-gray-100 rounded-2xl shadow-sm hover:shadow-md hover:border-primary-500 transition-all duration-300 items-start">
							<div class="w-12 h-12 bg-primary-50 rounded-xl flex items-center justify-center shrink-0 mt-0.5 border border-primary-100">
								<i
									data-lucide={benefit.icon}
									class="w-6 h-6 text-primary-600"
								/>
							</div>
							<div>
								<h4
									class="font-extrabold text-gray-900 text-lg mb-2"
									set:html={benefit.title}
								/>
								<p
									class="text-body-sm"
									set:html={benefit.description}
								/>
							</div>
						</div>
					))
				}
			</div>
		</section>

		<!-- [COMPARISON] -->
		<section class="max-w-4xl mx-auto">
			<h2 class="section-title text-center mb-10">
				{copy.comparison.title}
			</h2>
			<div
				class="bg-white rounded-3xl border border-gray-200 shadow-md shadow-gray-200/50 overflow-hidden"
			>
				<table class="w-full text-left border-collapse">
					<thead>
						<tr class="bg-gray-50 border-b border-gray-100">
							<th
								class="p-1 text-xs font-extrabold uppercase tracking-widest text-gray-400 w-1/4"
							>
								{copy.comparison.table.headers[0]}
							</th>
							<th
								class="p-2 text-xs font-extrabold uppercase tracking-widest text-gray-400 text-center w-1/3"
							>
								{copy.comparison.table.headers[1]}
							</th>
							<th
								class="p-1 text-xs font-extrabold uppercase tracking-widest text-primary-600 text-center w-1/3 bg-primary-50/30"
							>
								{copy.comparison.table.headers[2]}
							</th>
						</tr>
					</thead>
					<tbody>
						{
							copy.comparison.table.rows.map((row) => (
								<tr class="border-b border-gray-50 last:border-0 hover:bg-gray-50/50 transition-colors">
									<td class="p-5 font-bold text-gray-700 text-sm md:text-base">
										{row.factor}
									</td>
									<td class="p-5 text-center text-gray-400 font-medium text-sm md:text-base line-through decoration-red-300 decoration-2">
										{row.agency}
									</td>
									<td class="p-5 text-center bg-primary-50/10">
										<div
											class="inline-block px-4 py-2 bg-primary-50 text-primary-700 font-bold rounded-lg text-sm md:text-base shadow-sm border border-primary-100"
											set:html={row.adsmakr}
										/>
									</td>
								</tr>
							))
						}
					</tbody>
				</table>
			</div>
		</section>

		<!-- [BONUSES] -->
		<section
			class="bg-white border-2 border-dashed border-gray-300 rounded-3xl p-4 md:p-8 relative overflow-hidden"
		>
			<div class="text-center mb-6">
				<span
					class="bg-red-100 text-red-600 px-3 py-1.5 rounded-full text-[10px] font-black tracking-widest mb-4 inline-block border border-red-200 uppercase"
				>
					{copy.bonuses.tag}
				</span>
				<h2
					class="text-3xl md:text-5xl font-black text-gray-900 mb-4 tracking-tight leading-tight text-balance"
					set:html={copy.bonuses.title}
				/>
				<p class="text-body-pro max-w-lg mx-auto text-gray-600">
					{copy.bonuses.subtitlePre}
					<strong class="text-red-500 bg-red-50 px-2 rounded"
						>{copy.bonuses.subtitleValue}</strong
					>{copy.bonuses.subtitlePost}
				</p>
			</div>

			<div class="grid gap-4">
				{
					copy.bonuses.items.map((bonus) => (
						<div class="bg-gray-50 border border-gray-200 p-6 rounded-2xl flex flex-col gap-2 relative overflow-hidden group hover:border-red-200 transition-colors">
							<div class="flex justify-between items-start gap-4">
								<h3
									class="font-extrabold text-gray-900 text-lg leading-tight"
									set:html={bonus.title}
								/>
								<span
									class="bg-white border border-gray-200 text-[10px] px-2 py-1 rounded font-bold text-gray-500 shrink-0 shadow-sm whitespace-nowrap"
									set:html={bonus.value}
								/>
							</div>
							<p
								class="text-sm font-medium text-gray-600 leading-relaxed"
								set:html={bonus.desc}
							/>
						</div>
					))
				}
			</div>
		</section>

		<!-- [PRICING - SCARCITY] -->
		<section class="pt-8 mb-8">
			<div class="max-w-[340px] mx-auto relative group">
				<div
					class="absolute -inset-1 bg-gradient-to-r from-red-500 to-orange-500 rounded-[24px] blur opacity-25 group-hover:opacity-50 transition duration-1000 group-hover:duration-200"
				>
				</div>
				<div
					id="pricing"
					class="pricing-card-3d-final text-center relative bg-white"
				>
					<div
						class="absolute -top-3 left-1/2 -translate-x-1/2 whitespace-nowrap"
					>
						<span
							class="bg-red-600 text-white text-[10px] font-black px-4 py-1.5 rounded-full tracking-widest border-2 border-white shadow-xl animate-bounce"
						>
							{copy.pricing.tag}
						</span>
					</div>

					<h3
						class="text-[10px] font-black tracking-[0.3em] text-gray-800 mb-2 mt-2 uppercase"
						set:html={copy.pricing.subtitle}
					/>

					<div class="mb-6 mt-4">
						<span
							class="text-gray-400 line-through text-lg font-bold tracking-widest opacity-70 block mb-[-8px]"
						>
							{copy.pricing.originalPrice}
						</span>
						<div
							class="flex flex-col items-center text-gray-900 mt-2"
						>
							<div class="flex items-baseline leading-none gap-1">
								<span
									class="text-xl md:text-2xl font-extrabold text-gray-400/80"
								>
									Rp
								</span>
								<span
									class="text-[4.5rem] md:text-[5.5rem] font-black tracking-tighter text-gray-900 -my-3"
								>
									{copy.pricing.priceMain}
								</span>
								<span
									class="text-2xl md:text-3xl font-black text-gray-900"
								>
									{copy.pricing.priceUnit}
								</span>
							</div>
							<p
								class="text-[10px] md:text-xs font-bold text-gray-400 tracking-[0.25em] uppercase mt-1"
							>
								{copy.pricing.priceDetail}
							</p>
						</div>
					</div>

					<div
						class="space-y-3 mb-8 max-w-xs mx-auto text-left bg-gray-50 p-5 rounded-xl border border-gray-100"
					>
						{
							copy.pricing.features.map((feature) => (
								<div class="flex items-start gap-3">
									<div class="bg-primary-100 rounded-full p-0.5 mt-0.5 shrink-0">
										<i
											data-lucide="check-circle-2"
											class="w-5 h-5 text-primary-500 shrink-0 mt-0.5"
										/>
									</div>
									<span
										class="text-gray-700 font-medium text-sm"
										set:html={feature}
									/>
								</div>
							))
						}
					</div>

					<div class="w-full space-y-3">
						<a
							href="https://aipedia.myr.id/plink/adsmakr/"
							class="btn-3d w-full group no-underline"
						>
							<span class="text-lg">{copy.pricing.cta}</span>
							<i
								data-lucide="arrow-right"
								class="w-5 h-5 group-hover:translate-x-1 transition-transform"
							></i>
						</a>
						<p class="text-[10px] text-gray-400 font-medium">
							{copy.pricing.note}
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- [FAQ] -->
		<section class="pb-12 border-t border-gray-100 pt-12">
			<h2 class="section-title text-center mb-8">{copy.faq.title}</h2>
			<div class="space-y-3">
				{
					copy.faq.items.map((faq) => (
						<details class="group bg-white rounded-xl border border-gray-200 overflow-hidden hover:border-primary-500 transition-colors">
							<summary class="flex justify-between items-center p-5 cursor-pointer list-none bg-gray-50/50">
								<span class="font-black text-sm leading-tight text-gray-800 pr-4">
									{faq.question}
								</span>
								<i
									data-lucide="chevron-down"
									class="w-5 h-5 text-gray-400 transition-transform duration-300 group-open:rotate-180"
								/>
							</summary>
							<div
								class="px-5 pb-5 text-body-sm border-t border-gray-100 pt-4 bg-white"
								set:html={faq.answer}
							/>
						</details>
					))
				}
			</div>
		</section>
	</main>

	<!-- [STICKY PROMO BAR: INLINE FIXED] -->
	<div
		class="fixed bottom-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-md border-t border-gray-200 py-3 px-4 shadow-[0_-4px_20px_rgba(0,0,0,0.05)] animate-slide-up-fade"
	>
		<div
			class="max-w-4xl mx-auto flex flex-row items-center justify-between gap-4 h-6"
		>
			<!-- Marquee Container: Takes available space, strictly single line -->
			<div
				class="flex-1 min-w-0 overflow-hidden relative h-full mask-gradient flex items-center"
			>
				<div
					class="animate-marquee whitespace-nowrap flex items-center absolute left-0"
				>
					<span
						class="text-sm text-gray-800 mr-8 font-medium inline-block"
						set:html={copy.stickyBar.message}
					/>
					<span
						class="text-sm text-gray-800 mr-8 font-medium inline-block"
						set:html={copy.stickyBar.message}
					/>
					<span
						class="text-sm text-gray-800 mr-8 font-medium inline-block"
						set:html={copy.stickyBar.message}
					/>
					<span
						class="text-sm text-gray-800 mr-8 font-medium inline-block"
						set:html={copy.stickyBar.message}
					/>
				</div>
			</div>

			<!-- CTA Button: Never shrinks, never wraps -->
			<a
				href="#pricing"
				class="btn-3d !py-2 !px-4 !text-[11px] !rounded-lg !w-auto shrink-0 group animate-attention whitespace-nowrap h-9 flex items-center no-underline"
			>
				{copy.stickyBar.cta}
				<i
					data-lucide="arrow-right"
					class="w-3 h-3 group-hover:translate-x-1 transition-transform ml-1"
				></i>
			</a>
		</div>
	</div>
</Layout>

<style>
	@keyframes slideUpFade {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
	@keyframes wiggle {
		0%,
		100% {
			transform: rotate(0deg) scale(1);
		}
		5% {
			transform: rotate(-2deg) scale(1.02);
		}
		10% {
			transform: rotate(2deg) scale(1.02);
		}
		15% {
			transform: rotate(-2deg) scale(1.02);
		}
		20% {
			transform: rotate(2deg) scale(1.02);
		}
		25% {
			transform: rotate(0deg) scale(1);
		}
	}
	@keyframes marquee {
		0% {
			transform: translateX(0);
		}
		100% {
			transform: translateX(
				-50%
			); /* Moves exactly half way (if 2 items duplications are handled correctly or sufficient width) */
		}
		/* Note: For perfect text loop with "absolute", it's safer to just move long distance or use specific technique usually involving 2 exact copies. 
			   Here, since width varies, a simple translateX(-100%) of the *first* element is usually standard, but 'absolute' container makes it tricky.
			   Let's use a simpler flex approach for marquee. */
	}
	/* Simpler Marquee Implementation */
	@keyframes scrollText {
		from {
			transform: translateX(100%);
		} /* Start from outside right */
		to {
			transform: translateX(-100%);
		} /* Go to outside left */
	}

	/* Better Marquee: Continuous Loop */
	@keyframes loopScroll {
		from {
			transform: translateX(0);
		}
		to {
			transform: translateX(-100%);
		}
	}

	.animate-marquee {
		display: flex;
		animation: loopScroll 20s linear infinite;
	}

	.mask-gradient {
		mask-image: linear-gradient(
			to right,
			transparent,
			black 10%,
			black 90%,
			transparent
		);
	}

	.animate-slide-up-fade {
		animation: slideUpFade 0.5s ease-out forwards;
	}
	.animate-attention {
		animation: wiggle 3s ease-in-out infinite;
		transform-origin: center center;
	}
</style>
