---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Adsmakr Ramadan Preparation" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- Tailwind CDN with is:inline to fix loading issues -->
		<script is:inline src="https://cdn.tailwindcss.com"></script>
		<!-- Lucide Icons -->
		<script is:inline src="https://unpkg.com/lucide@latest"></script>

		<script is:inline>
			tailwind.config = {
				theme: {
					extend: {
						colors: {
							primary: {
								50: "#ecfdf5",
								100: "#d1fae5",
								200: "#a7f3d0",
								300: "#6ee7b7",
								400: "#34d399",
								500: "var(--primary-main)", // Connected to CSS Variable
								600: "#059669",
								700: "var(--primary-deep)", // Connected to CSS Variable
								800: "#065f46",
								900: "var(--primary-dark)", // Connected to CSS Variable
							},
						},
					},
				},
			};
		</script>

		<style is:global>
			@import url("https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800;900&display=swap");

			:root {
				--primary-main: #10b981; /* emerald-500 */
				--primary-deep: #047857; /* emerald-700 */
				--primary-dark: #064e3b; /* emerald-900 */
			}

			body {
				font-family: "Plus Jakarta Sans", sans-serif;
				background-color: #ffffff;
				color: #111827;
				line-height: 1.5;
			}

			/* Essential 3D Style */
			.btn-3d {
				position: relative;
				background: var(--primary-main);
				color: white;
				padding: 16px 24px;
				font-weight: 800;
				border-radius: 16px; /* Slightly rounder edges */
				cursor: pointer;
				transition: all 0.1s ease;
				border: none;
				/* "Puffy" Texture: Top highlight + Bottom shadow */
				box-shadow:
					inset 0 2px 0 rgba(255, 255, 255, 0.25),
					0 4px 0 var(--primary-deep),
					0 6px 6px -3px rgba(0, 0, 0, 0.2);
				display: inline-flex;
				align-items: center;
				justify-content: center;
				gap: 10px;
				width: 100%;
				text-transform: uppercase;
				letter-spacing: 0.05em;
				font-size: 0.9rem;
				text-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);
			}

			.btn-3d:active {
				transform: translateY(4px);
				box-shadow:
					inset 0 2px 0 rgba(255, 255, 255, 0.25),
					0 0 0 var(--primary-deep);
			}

			.app-container {
				max-width: 560px;
				margin: 0 auto;
				min-height: 100vh;
				background: white;
				border-left: 1px solid #f3f4f6;
				border-right: 1px solid #f3f4f6;
			}

			/* Balanced Typography */
			.text-hero {
				font-size: clamp(2rem, 5vw, 2.5rem);
				line-height: 1.1;
				letter-spacing: -0.05em;
				font-weight: 800;
			}

			.section-title {
				font-size: 1.75rem;
				line-height: 1.2;
				letter-spacing: -0.03em;
				font-weight: 800;
			}

			.highlight-red {
				color: #ef4444;
			}
			.highlight-green {
				color: #10b981;
			}

			/* Generic Card Props */
			.photo-box {
				background-color: #f9fafb;
				border: 2px solid #f3f4f6;
				border-radius: 12px;
				overflow: hidden;
				display: flex;
				align-items: center;
				justify-content: center;
			}

			/* Refined Pricing Card - Smaller & Cleaner */
			.pricing-card-3d-final {
				background: #ffffff;
				border: 2px solid #111827;
				border-radius: 20px;
				box-shadow: 8px 8px 0 0 #111827;
				position: relative;
				/* Reduced padding */
				padding: 2.5rem 1.5rem;
			}

			/* Human-Readable Body Text */
			.text-body-pro {
				font-size: 1.125rem;
				font-weight: 500;
				color: #374151;
				line-height: 1.6;
			}

			hr {
				/* Removed as requested previously, keeping reset just in case */
				display: none;
			}

			details summary::-webkit-details-marker {
				display: none;
			}
			* {
				font-style: normal !important;
			}
		</style>
	</head>
	<body class="antialiased">
		<div class="app-container">
			<slot />
		</div>
		<script is:inline>
			// Re-initialize icons when available
			if (typeof lucide !== "undefined") {
				lucide.createIcons();
			}
		</script>
	</body>
</html>
